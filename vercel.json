{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "npm install --legacy-peer-deps --prefer-offline --no-audit",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/.*",
      "dest": "dist/index.html"
    }
  ]
}